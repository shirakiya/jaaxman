{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "ssh_private_key_file": "{{env `SSH_PRIVATE_KEY_FILE`}}",
    "mackerel_api_key": "{{env `MACKEREL_API_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-8c58d9ea",
    "instance_type": "t2.micro",
    "ssh_username": "root",
    "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
    "ssh_timeout": "3m",
    "ami_name": "jaaxman_app_{{isotime \"200601020304\"}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/sleep.sh",
        "scripts/base.sh",
        "scripts/codedeploy.sh",
        "scripts/app.sh"
      ],
      "environment_vars": [
        "MACKEREL_APIKEY={{user `mackerel_apikey`}}"
      ]
    },
    {
      "type": "file",
      "source": "files/td-agent/td-agent.app.conf",
      "destination": "/etc/td-agent/td-agent.conf"
    },
    {
      "type": "file",
      "source": "files/mackerel/conf.d/app.conf",
      "destination": "/etc/mackerel-agent/conf.d/app.conf"
    },
    {
      "type": "file",
      "source": "files/mackerel/default/mackerel-agent",
      "destination": "/etc/default/mackerel-agent"
    },
    {
      "type": "file",
      "source": "files/nginx/nginx.conf",
      "destination": "/etc/nginx/nginx.conf"
    },
    {
      "type": "file",
      "source": "files/nginx/jaaxman.conf",
      "destination": "/etc/nginx/conf.d/jaaxman.conf"
    },
    {
      "type": "file",
      "source": "files/uwsgi.ini",
      "destination": "/etc/nginx/uwsgi.ini"
    },
    {
      "type": "file",
      "source": "files/uwsgi.service",
      "destination": "/etc/systemd/system/uwsgi.service"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/post_app.sh"
      ]
    }
  ]
}

{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "ssh_private_key_file": "{{env `SSH_PRIVATE_KEY_FILE`}}",
    "mackerel_apikey": "{{env `MACKEREL_APIKEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-0b2fbb6d",
    "instance_type": "t2.micro",
    "ssh_username": "root",
    "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
    "ssh_timeout": "3m",
    "ami_name": "jaaxman_job_{{isotime \"200601020304\"}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/sleep.sh",
        "scripts/base.sh",
        "scripts/codedeploy.sh"
      ],
      "environment_vars": [
        "MACKEREL_APIKEY={{user `mackerel_apikey`}}"
      ]
    },
    {
      "type": "file",
      "source": "files/chrony.conf",
      "destination": "/etc/chrony/chrony.conf"
    },
    {
      "type": "file",
      "source": "files/td-agent/td-agent.job.conf",
      "destination": "/etc/td-agent/td-agent.conf"
    },
    {
      "type": "file",
      "source": "files/mackerel/conf.d/job.conf",
      "destination": "/etc/mackerel-agent/conf.d/job.conf"
    },
    {
      "type": "file",
      "source": "files/mackerel/default/mackerel-agent",
      "destination": "/etc/default/mackerel-agent"
    },
    {
      "type": "file",
      "source": "files/crontab",
      "destination": "/root/crontab"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/job.sh"
      ]
    }
  ]
}
